version: 2.1

jobs:
  build:
    docker:
      - image: cimg/base:2021.04
    resource_class: arm.medium
    steps:
      - checkout
      - setup_remote_docker:
          docker_layer_caching: true
      - run: |
          TAG=0.1.$CIRCLE_BUILD_NUM
          docker build -t bloveless/spacemongerd:$TAG -f ./docker/daemon/Dockerfile .

workflows:
  version: 2
  build-main:
    jobs:
      - build:
          filters:
            branches:
              only: main
